{{#if addNewQuestion}}
  <h2>New Question</h2>
  <div>
    <form class="">
      <div class="form-group">
        <label for="body">Question</label>
        {{input value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
